    "version": "0.2.0",
    "configurations": [
    {
        "type": "lldb",
        "request": "launch",
        "name": "Launch",
        "program": "${workspaceFolder}/<program>",
        "args": [],
        "cwd": "${workspaceFolder}"
    },
        
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'my-bevy-project'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=my-bevy-project",
                    "--package=my-bevy-project"
                ],
                "filter": {
                    "name": "my-bevy-project",
                    "kind": "bin"
                }
            },
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}",
                "PATH": "${env:USERPROFILE}/.rustup/toolchains/stable-x86_64-pc-windows-msvc/bin;${workspaceFolder}/target/debug/deps;${env:PATH}",
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'my-bevy-project'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=my-bevy-project",
                    "--package=my-bevy-project"
                ],
                "filter": {
                    "name": "my-bevy-project",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}